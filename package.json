{
  "name": "@xubylele/schema-forge",
  "version": "1.4.0",
  "description": "Universal migration generator from schema DSL",
  "main": "dist/cli.js",
  "type": "commonjs",
  "bin": {
    "schema-forge": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts --format cjs --dts",
    "dev": "ts-node src/cli.ts",
    "test": "vitest",
    "prepublishOnly": "npm run build",
    "publish:public": "npm publish --access public",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "keywords": [
    "cli",
    "schema",
    "sql",
    "generator",
    "migration",
    "database"
  ],
  "author": "Xuby",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xubylele/schema-forge.git"
  },
  "bugs": "https://github.com/xubylele/schema-forge/issues",
  "homepage": "https://github.com/xubylele/schema-forge#readme",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@xubylele/schema-forge-core": "^1.0.4",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.2.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
